Bluepill.application('simple_server',
                     :log_file => '/tmp/bluepill.log') do |app|
  app.process('simple_server') do |process|
    process.working_dir = '/mnt/raknet/Source'
    process.pid_file = "/tmp/simple_server.pid"
    process.start_command = '/mnt/raknet/Source/a.out'
    process.stop_command = 'kill {{PID}}'
    process.daemonize = true
    process.stdout = "/mnt/logs/stdout.log"
    process.stderr = "/mnt/logs/stderr.log"
  end
end
